ct-cols
    ct-col(size=4) 
        ct-section-caption Metrics as the table
        .simple-table
            table(mat-table '[dataSource]'="tables.metrics.table") 
                ng-container(matColumnDef="sum") 
                    th(mat-header-cell *matHeaderCellDef) Sum 
                    td(mat-cell *matCellDef="let el") {{el.name}} 
                ng-container(matColumnDef="params") 
                    th(mat-header-cell *matHeaderCellDef) Params 
                    td(mat-cell *matCellDef="let el") {{el.value}} 
                tr(mat-header-row *matHeaderRowDef="tables.metrics.columnsToDisplay") 
                tr(mat-row *matRowDef="let row; columns: tables.metrics.columnsToDisplay;") 
    ct-col(size=8) 
        ct-section-caption As the graph
        .graph
            plotly-plot('[data]'="graph.data" '[layout]'="graph.layout" '[useResizeHandler]'="true" '[style]'="{position: 'relative', width: '100%', height: '100%'}")
