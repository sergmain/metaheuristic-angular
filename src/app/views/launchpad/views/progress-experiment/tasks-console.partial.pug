ct-cols
    ct-col
        div 
            ct-section-caption Tasks 
            .simple-table.tasks
                table(mat-table [dataSource]="tables.tasks.table") 
                    ng-container(matColumnDef="id") 
                        td(mat-cell *matCellDef="let el") {{el.id}}
                    ng-container(matColumnDef="col1") 
                        td(mat-cell *matCellDef="let el") 
                            table
                                tr
                                    td type: 
                                    td {{el.type}} 
                                tr
                                    td completed: 
                                    td: span {{el.isCompleted}} 
                                tr
                                    td assigned: 
                                    td {{el.assignedOn}} 
                                tr
                                    td completed: 
                                    td {{el.completedOn}} 
                    ng-container(matColumnDef="col2") 
                        td(mat-cell *matCellDef="let el") 
                            div: button(mat-flat-button color="primary") Info
                            div: button(mat-flat-button color="primary") Re-run
                    tr(mat-row *matRowDef="let row; columns: tables.tasks.columnsToDisplay;") 
    ct-col(style="flex:1;")
        div 
            ct-section-caption Console output 
            .console 
                ngx-json-viewer('[json]'="experiment" '[expanded]'="true") 
