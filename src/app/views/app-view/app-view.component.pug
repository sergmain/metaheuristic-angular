.app-view
	div(*ngIf="isAuth(); then thenBlock else elseBlock")
	ng-template(#thenBlock)
		mat-toolbar(class="app-view-header" color="primary")
			mat-toolbar-row(class="app-view-header__row")
				.app-view-header__left
					button(mat-button class="mat-button mat-button--sidenav" 
						'[disabled]'="sidenavIsDisabled"
						'(click)'="sideToggle()")
							mat-icon(class="mat-icon") menu
					button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" '[routerLinkActiveOptions]'="{ exact: true }" routerLink="") AiAi
					button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" routerLink="/launchpad") Launchpad
					button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" routerLink="/pilot") Pilot
				.app-view-header__right
					mat-slide-toggle('[checked]'="themeActive" '(change)'="themeToggle($event)")
					button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" routerLink="/about") About
					button(class="mat-button mat-button--menu-item" '(click)'="logout()") Logout
		mat-sidenav-container(class="app-view-body")
			mat-sidenav(class="app-view-sidenav" mode="side" '[opened]'="sidenavIsOpen")
				router-outlet(name="nav")
			mat-sidenav-content(class="app-view-sidenav-content")
				router-outlet(name="body") 

	ng-template(#elseBlock)
		mat-toolbar(class="app-view-header" color="primary")
			mat-toolbar-row(class="app-view-header__row")
				.app-view-header__left
					button(class="mat-button" mat-button routerLink="/") AiAi
				.app-view-header__right
		mat-sidenav-container(class="app-view-body")
			mat-sidenav-content(class="app-view-sidenav-content")
				div(class="flex space-between flex-start")
					about-view 
					login-view 