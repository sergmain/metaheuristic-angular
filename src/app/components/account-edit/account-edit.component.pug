ct-cols(align-items="baseline")
    ct-col(size="6")
        ct-section
            ct-section-header
                ct-section-header-row
                    ct-heading Edit Account {{account ? account.username : ''}} ({{account ? account.publicName : ''}})
            ct-section-body('*ngIf'="currentStates.has(states.firstLoading)")
                ct-section-body-row
                    mat-progress-bar(mode="indeterminate")
            ct-section-body('*ngIf'="!currentStates.has(states.firstLoading)") 
                ct-section-body-row
                    ct-section-content
                        mat-form-field(appearance="outline") 
                            mat-label Public Name
                            input(matInput '[(ngModel)]'="account.publicName") 
                    ct-section-content
                        mat-checkbox('[(ngModel)]'="account.enabled") Is account enabled?
            ct-section-footer
                ct-section-footer-row
                    ct-flex(justify-content="flex-end" gap="8px")
                        ct-flex-item: button(mat-stroked-button '(click)'="back()") Cancel
                        ct-flex-item: button(mat-flat-button '(click)'="save()" color="primary" '[disabled]'="currentStates.has(states.wait)") Save
    ct-col(size="6")
        ct-section(*ngIf="response")
            ct-section-body
                ct-section-body-row
                    p STATUS: {{response.status}}
                    p(*ngFor="let error of response.errorMessages; index as i; trackBy: trackByFn") {{error}}
