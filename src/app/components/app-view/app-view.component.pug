.app-view('*ngIf'="isAuth()")
    .app-view__header
        mat-toolbar.toolbar(color="primary")
            mat-toolbar-row
                ct-flex(justify-content="space-between" align-items="center")
                    ct-flex-item
                        ct-flex(justify-content="flex-start" gap="9px" align-items="center")
                            ct-flex-item
                                button(class="mat-button mat-button--sidenav" mat-button '[disabled]'="sidenavButtonDisable" '(click)'="toggleSidenav()"): mat-icon(class="mat-icon") menu
                            ct-flex-item
                                button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" '[routerLinkActiveOptions]'="{ exact: true }" routerLink="") Metaheuristic
                            ct-flex-item
                                button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active"  routerLink="/launchpad") {{ 'app-view.Launchpad' | translate }}
                            //- ct-flex-item
                            //-     button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" routerLink="/billing") Billing
                    ct-flex-item
                        ct-flex(justify-content="flex-end" gap="9px" align-items="center")
                            ct-flex-item
                                mat-slide-toggle(#matSlideToggleTheme '[checked]'="themeState" '(change)'="toggleTheme($event)")
                            ct-flex-item
                                mat-select(#matSelectLanguage '[(value)]'="settings.language" '(selectionChange)'="toggleLanguage()")
                                    mat-option('*ngFor'="let language of languages" '[value]'="language") {{language}}
                            ct-flex-item
                                button(class="mat-button mat-button--menu-item" mat-button routerLinkActive="active" routerLink="/about") {{ 'app-view.About' | translate }}
                            ct-flex-item
                                button(class="mat-button mat-button--menu-item" mat-button '(click)'="logout()") {{ 'app-view.Logout' | translate }}

    .app-view__body
        router-outlet
    .app-view__footer
        ct-flex(justify-content="center")
            ct-flex-item Metaheuristic, © 2017-2019


