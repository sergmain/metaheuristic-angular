ct-cols
    ct-col(size="6")
        ct-section
            ct-section-header
                ct-section-header-row
                    ct-heading New Experiment
            ct-section-body
                ct-section-body-row
                    form('[formGroup]'="form" novalidate)
                        ct-section-content
                            mat-form-field(appearance="outline")
                                mat-label Name
                                input(matInput formControlName="name")
                                mat-hint This is a required field.
                        ct-section-content
                            mat-form-field(appearance="outline")
                                mat-label Description
                                textarea(matInput formControlName="description" cdkTextareaAutosize cdkAutosizeMinRows="5")
                                mat-hint This is a required field.
                        ct-section-content
                            mat-form-field(appearance="outline")
                                mat-label Experiment code
                                textarea(matInput formControlName="code" cdkTextareaAutosize cdkAutosizeMinRows="5")
                                mat-hint This is a required field.
                        ct-section-content
                            mat-form-field(appearance="outline")
                                mat-label Seed
                                input(matInput formControlName="seed")
                                mat-hint Default value will be used if not defined. Which is 1. 
            ct-section-footer
                ct-section-footer-row
                    ct-flex(justify-conetnt="flex-end" gap="8px")
                        ct-flex-item: button(mat-stroked-button '(click)'="cancel()") Cancel
                        ct-flex-item: button(mat-flat-button '(click)'="create()" color="primary" '[disabled]'="[states.wait].includes(currentState) || form.invalid") Create
    ct-col(size="6")
        ct-section(*ngIf="response")
            ct-section-body
                ct-section-body-row
                    div
                        p STATUS: {{response.status}}
                        p(*ngFor="let error of response.errorMessages; index as i; trackBy: trackByFn") {{error}}







