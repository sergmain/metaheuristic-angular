ct-section
    ct-section-header
        ct-heading Accounts


    ct-section-body
        ct-section-body-row
            ct-table(#table)
                table(mat-table '[dataSource]'="dataSource" class="mat-table") 
                    ng-container(matColumnDef="id") 
                        th(mat-header-cell *matHeaderCellDef) ID 
                        td(mat-cell *matCellDef="let el") {{el.id}} 
                    ng-container(matColumnDef="isEnabled") 
                        th(mat-header-cell *matHeaderCellDef) Is enabled 
                        td(mat-cell *matCellDef="let el") {{el.enabled ? 'Yes':'No'}} 
                    ng-container(matColumnDef="login") 
                        th(mat-header-cell *matHeaderCellDef) Login 
                        td(mat-cell *matCellDef="let el") {{el.login}} 
                    ng-container(matColumnDef="publicName") 
                        th(mat-header-cell *matHeaderCellDef) Public name 
                        td(mat-cell *matCellDef="let el") {{el.publicName}} 
                    ng-container(matColumnDef="createdOn") 
                        th(mat-header-cell *matHeaderCellDef) Created On 
                        td(mat-cell *matCellDef="let el") {{el.createdOn | date:'HH:mm:ss, MMM&nbsp;d,&nbsp;yyyy'}}   

                    ng-container(matColumnDef="bts") 
                        th(mat-header-cell *matHeaderCellDef)  
                        td(mat-cell *matCellDef="let el") 
                            ct-flex(justify-content="flex-end" gap="4px")
                                ct-flex-item: button(mat-flat-button size="forTableRow" '[routerLink]'="['/launchpad/accounts/edit/',el.id]" color="primary")  Edit
                                ct-flex-item: button(mat-flat-button size="forTableRow" '[routerLink]'="['/launchpad/accounts/access/',el.id]" color="primary")  Access
                                ct-flex-item: button(mat-flat-button size="forTableRow" '[routerLink]'="['/launchpad/accounts/edit-password/',el.id]" color="primary")   Change Password
                    tr(mat-header-row *matHeaderRowDef="columnsToDisplay")  
                    tr(mat-row *matRowDef="let row; columns: columnsToDisplay;") 
        ct-section-body-row('*ngIf'="currentStates.has(states.firstLoading)")
            mat-progress-bar(mode="indeterminate")


    ct-section-footer
        ct-section-footer-row
            ct-flex(justify-content="space-between")
                ct-flex-item
                    ct-flex(justify-content="flex-start" gap="8px")
                        ct-flex-item: button(mat-flat-button color="primary" #prevTable '(click)'='prev()' disabled): mat-icon arrow_back_ios
                        ct-flex-item: button(mat-flat-button color="primary" #nextTable '(click)'='next()' disabled): mat-icon arrow_forward_ios
                ct-flex-item: button(mat-flat-button color="primary" wide '[disabled]'="currentStates.has(states.loading) || currentStates.has(states.firstLoading)" routerLink="/launchpad/accounts/add/") Add New Account 


                



