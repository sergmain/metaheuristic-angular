ct-section
    ct-section-header
        ct-section-header-row
            ct-heading Atlas Experiments
    
    ct-section-body
        ct-section-body-row
            ct-table(#table)
                table(mat-table '[dataSource]'="dataSource" class="mat-table") 
                    ng-container(matColumnDef="id") 
                        th(mat-header-cell *matHeaderCellDef) Id
                        td(mat-cell *matCellDef="let el") {{el.id}} 
                    ng-container(matColumnDef="name") 
                        th(mat-header-cell *matHeaderCellDef) Name
                        td(mat-cell *matCellDef="let el") {{el.name}} 
                    ng-container(matColumnDef="description") 
                        th(mat-header-cell *matHeaderCellDef) Description
                        td(mat-cell *matCellDef="let el") {{el.description}} 
                    ng-container(matColumnDef="createdOn") 
                        th(mat-header-cell *matHeaderCellDef) Created on
                        td(mat-cell *matCellDef="let el") {{el.createdOn | date:'HH:mm:ss, MMM d, yyyy'}} 
                    ng-container(matColumnDef="bts") 
                        th(mat-header-cell *matHeaderCellDef) 
                        td(mat-cell *matCellDef="let el") 
                            ct-flex(justify-content="flex-end" gap="4px" align-items="center")
                                ct-flex-item: a('[routerLink]'="['/launchpad/atlas/experiment-info',el.id]"): button(size="forTableRow" mat-flat-button color="primary") Detail
                                ct-flex-item: a('[routerLink]'="['/launchpad/atlas/experiment-export-import/',el.id]"): button(size="forTableRow" mat-flat-button color="primary") Export / Import
                                ct-flex-item: button(size="forTableRow" mat-flat-button color="warn" '(click)'="delete(el)" ): mat-icon delete
                    tr(mat-header-row *matHeaderRowDef="columnsToDisplay")
                    tr(mat-row *matRowDef="let row; columns: columnsToDisplay;" '[class.deleted-table-row]'="deletedExperiments.includes(row)")
        ct-section-body-row('*ngIf'="currentStates.has(states.firstLoading)")
            mat-progress-bar(mode="indeterminate")

    ct-section-footer
        ct-section-footer-row
            ct-flex(justify-content="flex-start" gap="8px")
                ct-flex-item: button(mat-flat-button #prevTable '(click)'='prev()' disabled): mat-icon arrow_back_ios
                ct-flex-item: button(mat-flat-button #nextTable '(click)'='next()' disabled): mat-icon arrow_forward_ios


