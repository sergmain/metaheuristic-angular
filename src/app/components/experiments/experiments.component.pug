.section
    .section__header
        ct-section-caption Experiments
    .section__body
        ct-table.simple-table(#table)
            table(mat-table '[dataSource]'="dataSource" class="mat-table") 
                ng-container(matColumnDef="id") 
                    th(mat-header-cell *matHeaderCellDef) Id
                    td(mat-cell *matCellDef="let el") {{el.experiment.id}} 
                ng-container(matColumnDef="name") 
                    th(mat-header-cell *matHeaderCellDef) Name
                    td(mat-cell *matCellDef="let el") {{el.experiment.name}} 
                ng-container(matColumnDef="createdOn") 
                    th(mat-header-cell *matHeaderCellDef) Created on
                    td(mat-cell *matCellDef="let el") {{el.experiment.createdOn | date:'HH:mm:ss, MMM d, yyyy'}} 
                ng-container(matColumnDef="bts") 
                    th(mat-header-cell *matHeaderCellDef) 
                    td(mat-cell *matCellDef="let el") 
                        .buttons.buttons--right
                            a('[routerLink]'="['/launchpad/experiments',el.experiment.id,'edit']")
                                button(mat-flat-button  color="primary" '[disabled]'="el.experiment.featureProduced") Edit
                            a('[routerLink]'="['/launchpad/experiments',el.experiment.id,'info']")
                                button(mat-flat-button color="primary" '[disabled]'="!el.experiment.workbookId") Info
                            button(mat-flat-button color="primary" '(click)'="clone(el)") Clone
                            button(mat-flat-button color="warn" '(click)'="delete(el)" ) <mat-icon>delete</mat-icon> 
                tr(mat-header-row *matHeaderRowDef="columnsToDisplay")
                tr(mat-row *matRowDef="let row; columns: columnsToDisplay;"
                    '[class.deleted-table-row]'="deletedExperiments.includes(row)")
        .section__content('*ngIf'="currentStates.has(states.firstLoading)")
            mat-progress-bar(mode="indeterminate")

    .section__footer
        .flex.flex--jc_sb
            .buttons.buttons--left 
                button(mat-flat-button #prevTable disabled '(click)'='prev()') <mat-icon>arrow_back_ios</mat-icon>
                button(mat-flat-button #nextTable disabled '(click)'='next()') <mat-icon>arrow_forward_ios</mat-icon>
            .buttons.buttons--right
                button(mat-flat-button color="primary"
                    '[disabled]'="currentStates.has(states.loading) || currentStates.has(states.firstLoading)" 
                    routerLink="/launchpad/experiments/add/") Add Experiment
