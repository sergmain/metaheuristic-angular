{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@src/*": [
          "./src/*"
        ],
        "@app/*": [
          "./src/app/*"
        ],
        "@services/*": [
          "./src/app/services/*"
        ]
      },
      "outDir": "./dist/out-tsc",
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": false,
      "module": "es2020",
      "moduleResolution": "bundler",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2020",
        "dom"
      ]
    }
}